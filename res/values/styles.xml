<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <!--  Main Menu Button style definition -->
  	<style name="main_menu_button_style"> 
  	    <item name="android:textSize">20sp</item> 
  	    <item name="android:textColor">#FFFFFF</item>
  	    <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">0dp</item>
    	<item name="android:layout_marginTop">5dp</item>
    	<item name="android:layout_marginBottom">5dp</item>
    	<item name="android:layout_gravity">center</item>
    	<item name="android:layout_weight">.13</item>
  	    <item name="android:background">@drawable/button_background</item>
  	</style>
  	
  	
  	<!--  Settings Radio Button Style Definition -->
  	<style name="settings_radio_button_style">
  	    <item name="android:layout_width">wrap_content</item>
  	    <item name="android:layout_height">wrap_content</item>
  	    <item name="android:textColor">#FFFFFF</item>
    	<item name="android:layout_marginLeft">40dp</item>
    	<item name="android:layout_marginTop">10dp</item>
  	    <item name="android:button">@drawable/radio_button_images</item>
  	</style>
  	
  	
  	<!--  Edit Text Style Definition -->
  	<style name="new_entry_edit_text_style">
  	    <item name="android:layout_width">match_parent</item>
  	    <item name="android:layout_height">wrap_content</item>
  	    <item name="android:textColor">#FFFFFF</item>
    	<item name="android:layout_marginLeft">30dp</item>
    	<item name="android:layout_marginRight">30dp</item>
    	<item name="android:layout_marginTop">10dp</item>
    	<item name="android:textSelectHandle">@drawable/texthandle_text_select_handle_middle</item>
    	<item name="android:textSelectHandleLeft">@drawable/texthandle_text_select_handle_left</item>
    	<item name="android:textSelectHandleRight">@drawable/texthandle_text_select_handle_right</item>
  	    <item name="android:background">@drawable/edit_text_images</item>
  	</style>
  	
  	
  	<!--  Blue Line Divide Style Definition -->
  	<style name="blue_line_style">
  	    <item name="android:layout_width">match_parent</item>
  	    <item name="android:layout_height">1dp</item>
    	<item name="android:layout_marginTop">5dp</item>
    	<item name="android:layout_marginBottom">10dp</item>
    	<item name="android:layout_marginLeft">16dp</item>
    	<item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@color/blue</item>
  	</style>
  	

</resources>